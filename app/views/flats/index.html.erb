<div class="container w-75">
  <div class="d-flex justify-content-between align-items-center my-4">
    <h1>Flats</h1>
    <%= link_to 'Add flat', new_flat_path, class: "btn btn-primary"%>
  </div>
  <%# <p>Find me in app/views/flats/index.html.erb</p> %>
  <div class=" flat-card d-flex row gap-5 justify-content-between">
    <% @flats.each do |flat| %>
      <div class="card" style="width: 18rem;">
        <img src=<%= flat.picture_url %> class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= link_to flat.name, flat_path(id: flat.id) %></h5>
          <p class="card-text">
            <%= flat.address %>
          </p>
          <p class="card-text">
            $<%= flat.price_per_night %> per night
          </p>
            <p class="card-text">
            <%= flat.number_of_guests %> person
            </p>
          <%= link_to 'Delete', flat_path(id: flat.id), method: :delete, data: {:confirm => 'Are you sure?'}, class: "card-btn" %>
        </div>
      </div>
    <% end %>

  </div>
</div>
